{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "pages/*": [
        "src/pages/*"
      ],
      "hooks/*": [
        "src/hooks/*"
      ],
      "store/*": [
        "src/store/*"
      ],
      "layouts/*": [
        "src/layouts/*"
      ]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "target": "ES2015",
      "module": "CommonJS"
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "auto-imports.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],

}
